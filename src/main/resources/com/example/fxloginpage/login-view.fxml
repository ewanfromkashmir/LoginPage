<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.fxloginpage.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TextField fx:id="usernameField"/>
    <PasswordField fx:id="passwordField"/>
    <Button alignment="BOTTOM_CENTER" mnemonicParsing="false" text="Submit" onAction="#onSubmitButtonClick" fx:id="submit"/>
    <Button alignment="BOTTOM_LEFT" mnemonicParsing="false" text="Clear" onAction="#onClearButtonClick"/>
    <Button alignment="CENTER_RIGHT" mnemonicParsing="false" text="Cancel" onAction="#onCancelButtonClick" />
    <Button alignment="CENTER_RIGHT" mnemonicParsing="false" text="Create Account" onAction="#onCreateAccountButtonClick"/>
</VBox>
